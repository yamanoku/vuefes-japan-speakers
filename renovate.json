{
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests"
  ],
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rangeStrategy": "bump",
  "allowedCommands": ["pnpm install --lockfile-only"],
  "postUpgradeTasks": {
    "commands": ["pnpm install --lockfile-only"],
    "executionMode": "branch",
    "fileFilters": [
      "pnpm-workspace.yaml",
      "package.json",
      "pnpm-lock.yaml"
    ]
  },
  "labels": ["dependencies"],
  "dependencyDashboard": false,
  "automerge": true,
  "major": {
    "automerge": false
  },
  "schedule": ["after 10pm and before 6am on every weekday"],
  "assignees": [
    "yamanoku"
  ]
}
